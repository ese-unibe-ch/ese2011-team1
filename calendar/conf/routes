# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
# public static void showCalendar(long calendarId, String username,
#			String calendarName, String s_date, int dday, int mmonth,
#			int yyear, String message) {
#String username, String s_date

GET     /                                       Application.index
GET 	/calendars/{username}/		Application.showCalendarList
GET 	/events									Application.showEvents
GET 	/addEvent								Application.addEvent
GET 	/editEvent								Application.editEvent
GET 	/showCalendar							Application.showCalendar
GET		/Registration							Application.showregistration

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
# Import Secure routes
*      /                module:secure