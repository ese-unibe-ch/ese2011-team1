# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
# public static void showCalendar(long calendarId, String username,
#			String calendarName, String s_date, int dday, int mmonth,
#			int yyear, String message) {
#String username, String s_date

GET		/										Application.index
GET 	/calendars/{username}/					Application.showCalendarList
#GET 	/events									Application.showEvents
#GET 	/addEvent								Application.addEvent
#GET 	/editEvent								Application.editEvent
GET		/addEditEvents/{calendarId}/{eventId}/{name}/	Application.addEditEvent({eventId}, {calendarId}, {name}, {s_activeDate}, {message})
GET 	/showCalendar/{username}/{calendarId}/			Application.showCalendar({calendarId}, {username}, {s_activeDate}, {counter}, {message})
GET		/Registration							Application.showregistration
GET		/showProfile/{userName}/				Application.showProfile

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
# Import Secure routes
*     	/                                       module:secure
